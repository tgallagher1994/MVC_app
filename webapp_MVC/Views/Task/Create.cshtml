@model webapp_MVC.Models.TaskItem

<h2>Create Task</h2>

<form asp-action="Create" method="post">
	@Html.AntiForgeryToken()

	<!-- Show top-level model errors (e.g., UserId is null) -->
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<div>
		<label asp-for="Title"></label>
		<input asp-for="Title" class="form-control" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>

	<div>
		<label asp-for="Description"></label>
		<input asp-for="Description" class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<div>
		<label asp-for="IsComplete"></label>
		<input asp-for="IsComplete" type="checkbox" />
		<span asp-validation-for="IsComplete" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Create</button>
</form>

<a href="/Task">Back to List</a>

@section Scripts {
	<!-- Include client-side validation -->
	<partial name="_ValidationScriptsPartial" />
}